extends ../layouts/default.pug

block config

    //- Global Page Configuration
    - var pageTitle = 'Directory'

block content

    //- * * * * * * * *
    //- * * Navbar  * *
    //- * * * * * * * *

    include mixins/navbar.pug
    +navbar({
        navbarBg: 'bg-white',
        navbarStyle: 'navbar-light',
        navbarBrandColor: 'text-dark',
        navbarBtnColor: 'btn-teal',
        navbarContainer: 'container',
    })

    //- * * * * * * * * * *
    //- * * Page Header * *
    //- * * * * * * * * * *

    include mixins/header.pug
    +header({
        pageHeaderBg: 'bg-img-cover overlay',
        pageHeaderBgImg: 'background-image: url("https://source.unsplash.com/hrlvr2ZlUNk/1500x700")',
        pageHeaderStyle: 'page-header-dark',
        svgBorderAngled: true,
        svgBorderRounded: false,
        svgBorderWaves: false,
        svgBorderFill: 'text-light'
    })

        .page-header-content
            .container
                .row.justify-content-center
                    .col-xl-8.col-lg-10.text-center
                        h1.page-header-title Find the best businesses in town
                        p.page-header-text.mb-5 Search for restaurants, contractors, and other local businesses in your area to find out which ones are the best!
                        form.page-header-signup
                            .form-row.justify-content-center
                                .col-lg-6.col-md-8
                                    .form-group.mr-0.mr-lg-2
                                        label.sr-only(for='inputSearch') Find local businesses...
                                        input#inputSearch.form-control.form-control-solid.rounded-pill(type='text', placeholder='Find local businesses...')
                                .col-lg-3.col-md-4
                                    button.btn.btn-teal.btn-block.btn-marketing.rounded-pill(type='submit') Search

    //- * * * * * * * * * * *
    //- * * Intro Section * *
    //- * * * * * * * * * * *

    include mixins/section.pug
    +section({
        sectionBg: 'bg-light',
        sectionPadding: 'py-10',
        svgBorderAngled: true,
        svgBorderRounded: false,
        svgBorderWaves: false,
        svgBorderFill: 'text-white'
    })

        .container
            .row.justify-content-center
                .col-lg-6
                    .mb-5.text-center
                        .text-xs.text-uppercase-expanded.text-primary.mb-2 Browse Businesses
                        p.lead.mb-0 Not sure what to search for? Browse some of the most popular categories.
            .row.justify-content-center
                .col-md-6.col-lg-4.col-xl-3.mb-5
                    a.card.lift(href='#!')
                        img.card-img-top(src='https://source.unsplash.com/Yr4n8O_3UPc/800x500', alt='...')
                        .card-body.text-center.py-3
                            h6.card-title.mb-0 Restaurants
                .col-md-6.col-lg-4.col-xl-3.mb-5
                    a.card.lift(href='#!')
                        img.card-img-top(src='https://source.unsplash.com/YbGMa1Jz1yY/800x500', alt='...')
                        .card-body.text-center.py-3
