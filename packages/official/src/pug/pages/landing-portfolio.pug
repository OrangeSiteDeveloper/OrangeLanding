extends ../layouts/default.pug

block config

    //- Global Page Configuration
    - var pageTitle = 'Portfolio'

block content

    //- * * * * * * * *
    //- * * Navbar  * *
    //- * * * * * * * *

    include mixins/navbar.pug
    +navbar({
        navbarBg: 'bg-white',
        navbarStyle: 'navbar-light',
        navbarBrandColor: 'text-dark',
        navbarBtnColor: 'btn-primary',
        navbarContainer: 'container',
    })

    //- * * * * * * * * * *
    //- * * Page Header * *
    //- * * * * * * * * * *

    include mixins/header.pug
    +header({
        pageHeaderBg: 'bg-white',
        pageHeaderStyle: 'page-header-light',
        svgBorderAngled: false,
        svgBorderRounded: true,
        svgBorderWaves: false,
        svgBorderFill: 'text-light'
    })

        .page-header-content
            .container
                .row.justify-content-center
                    .col-xl-8.col-lg-10.text-center
                        img(src='assets/img/avataaars.svg', style='width: 15rem;').mb-4
                        h1.page-header-title Welcome to my portfolio!
                        p.page-header-text I am a graphic artist, illustrator, and UI designer specializing in modern, creative design based in Wildemount, TX

    //- * * * * * * * * * * *
    //- * * Intro Section * *
    //- * * * * * * * * * * *

    include mixins/section.pug
    +section({
        sectionBg: 'bg-light',
        sectionPadding: 'py-10',
        svgBorderAngled: false,
        svgBorderRounded: true,
        svgBorderWaves: false,
        svgBorderFill: 'text-white'
    })

        .container
            .row.text-center
                .col-lg-4.mb-5.mb-lg-0
                    .icon-stack.icon-stack-xl.bg-red.text-white.mb-4
                        i(data-feather='edit-3')
                    h3 Illustration
                    p.mb-0
                        | I provide custom illustration services for contract clients
                .col-lg-4.mb-5.mb-lg-0
                    .icon-stack.icon-stack-xl.bg-yellow.text-white.mb-4
                        i(data-feather='layout')
                    h3 UI Design
                    p.mb-0
                        | User experience and interface designs is one of my specialties
                .col-lg-4
                    .icon-stack.icon-stack-xl.bg-blue.text-white.mb-4
                        i(data-feather='droplet')
                    h3 Graphic Design
                    p.mb-0
                        | Photo restoration, post processing, and other photo services

