extends ../layouts/default.pug

block config

    //- Global Page Configuration
    - var pageTitle = 'Real Estate'

block content

    //- * * * * * * * *
    //- * * Navbar  * *
    //- * * * * * * * *

    include mixins/navbar.pug
    +navbar({
        navbarBg: 'bg-white',
        navbarStyle: 'navbar-light',
        navbarBrandColor: 'text-dark',
        navbarBtnColor: 'btn-primary',
        navbarContainer: 'container',
    })

    //- * * * * * * * * * *
    //- * * Page Header * *
    //- * * * * * * * * * *

    include mixins/header.pug
    +header({
        pageHeaderBg: 'bg-img-cover overlay overlay-primary overlay-90',
        pageHeaderBgImg: 'background-image: url("https://source.unsplash.com/g39p1kDjvSY/1600x1200")',
        pageHeaderStyle: 'page-header-dark',
        svgBorderAngled: false,
        svgBorderRounded: true,
        svgBorderWaves: false,
        svgBorderFill: 'text-white'
    })

        .page-header-content.py-5
            .container
                .row.justify-content-center
                    .col-xl-8.col-lg-10.text-center
                        h1.page-header-title Find your forever home
                        p.page-header-text.mb-5 Opening your home to vacationers is a great way to earn some extra income, and this is a great way to get started!
                        form.page-header-signup.mb-2.mb-md-0
                            .form-row.justify-content-center
                                .col-lg-9.col-md-8
                                    .form-group.mr-0.mr-lg-2
                                        label.sr-only(for='inputSearch') Enter and address, city, state, or ZIP 
                                        input#inputSearch.form-control.form-control-solid.rounded-pill(type='text', placeholder='Enter and address, city, state, or ZIP')
                                .col-lg-3.col-md-4
                                    button.btn.btn-teal.btn-block.btn-marketing.rounded-pill(type='submit') Search
                        p.page-header-text.small.mb-0.
                            By signing up, you agree to our <a href="javascript:void(0);">terms of service</a>

    //- * * * * * * * * * * * * * * * * *
    //- * * Featured Listings Section * *
    //- * * * * * * * * * * * * * * * * *

    include mixins/section.pug
