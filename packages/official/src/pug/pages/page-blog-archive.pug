extends ../layouts/default.pug

block config

    //- Global Page Configuration
    - var pageTitle = 'Blog Archive'

block content

    //- * * * * * * * *
    //- * * Navbar  * *
    //- * * * * * * * *

    include mixins/navbar.pug
    +navbar({
        navbarBg: 'bg-white',
        navbarStyle: 'navbar-light',
        navbarBrandColor: 'text-primary',
        navbarBtnColor: 'btn-primary',
        navbarContainer: 'container',
        navbarPosition: ''
    })

    //- * * * * * * * * * *
    //- * * Page Header * *
    //- * * * * * * * * * *

    include mixins/header.pug
    +header({
        pageHeaderBg: 'bg-img-cover overlay overlay-60',
        pageHeaderBgImg: 'background-image: url(https://source.unsplash.com/xZgvBXDB9wE/1600x900);',
        pageHeaderStyle: 'page-header-dark',
        svgBorderAngled: false,
        svgBorderRounded: true,
        svgBorderWaves: false,
        svgBorderFill: 'text-light'
    })

        .page-header-content
            .container.text-center
                .row.justify-content-center
                    .col-lg-8
                        h1.page-header-title.mb-3 Archive
                        p.page-header-text.mb-0 Browse posts in the category 'UI'

    //- * * * * * * * * * * *
    //- * * Blog Overview * *
    //- * * * * * * * * * * *

    include mixins/section.pug
    +section({
        sectionBg: 'bg-light',
        sectionPadding: 'py-10',
        svgBorderAngled: false,
        svgBorderRounded: true,
        svgBorderWaves: false,
        svgBorderFill: 'text-dark'
    })

        .container
            .row.justify-content-center
                .col-lg-10
                    .post-archive-tag Category 'UI'

                    a.post-archive-item(href='#!')
                        h5 Boots on the Ground, Inclusive Thought Provoking Ideas
                        p
                            | Empower communities and energize engaging ideas; scale and impact do-gooders while disruptring industries. Venture philanthropy benefits corporations and people by moving the needle.
                    .post-archive-meta
                        img.post-archive-meta-img(src='https://source.unsplash.com/QAB-WJcbgJk/100x100')
                        .post-archive-meta-details
                            .post-archive-meta-details-name Valerie Luna
                            .post-archive-meta-details-date Feb 5 &middot; 6 min read

                    hr.my-5

                    a.post-archive-item(href='#!')
                        h5 Invest In Social Impact
                        p
