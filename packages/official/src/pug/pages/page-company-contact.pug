extends ../layouts/default.pug

block config

    //- Global Page Configuration
    - var pageTitle = 'Contact'

block content

    //- * * * * * * * *
    //- * * Navbar  * *
    //- * * * * * * * *

    include mixins/navbar.pug
    +navbar({
        navbarBg: 'bg-transparent',
        navbarStyle: 'navbar-dark',
        navbarBrandColor: 'text-white',
        navbarBtnColor: 'btn-teal',
        navbarContainer: 'container',
        navbarPosition: 'fixed-top'
    })

    //- * * * * * * * * * *
    //- * * Page Header * *
    //- * * * * * * * * * *

    include mixins/header.pug
    +header({
        pageHeaderBg: 'bg-gradient-primary-to-secondary',
        pageHeaderStyle: 'page-header-dark',
        svgBorderAngled: false,
        svgBorderRounded: true,
        svgBorderWaves: false,
        svgBorderFill: 'text-light'
    })

        .page-header-content.pt-10
            .container.text-center
                .row.justify-content-center
                    .col-lg-8
                        h1.page-header-title.mb-3 Contact us
                        p.page-header-text Have questions? We're here to help!

    //- * * * * * * * * * * *
    //- * * Text Section  * *
    //- * * * * * * * * * * *

    include mixins/section.pug
    +section({
        sectionBg: 'bg-light',
        sectionPadding: 'py-10',
        svgBorderAngled: false,
        svgBorderRounded: true,
        svgBorderWaves: false,
        svgBorderFill: 'text-dark'
    })

        .container
            .row.mb-5
                .col-lg-4.mb-5
                    a.card.card-link.border-top.border-top-lg.border-primary.lift.text-center.o-visible.h-100(href='#!')
                        .card-body
                            .icon-stack.icon-stack-xl.bg-primary-soft.text-primary.mb-4.mt-n5.z-1.shadow
                                i(data-feather='user')
                            h5 Sales
                            p.card-text Ready to open an account? Have questions about purchasing a product?
                        .card-footer
                            .text-primary.font-weight-bold.d-inline-flex.align-items-center
                                | Contact Sales
                                i.fas.fa-arrow-right.text-xs.ml-1
                .col-lg-4.mb-5
                    a.card.card-link.border-top.border-top-lg.border-secondary.lift.text-center.o-visible.h-100(href='#!')
                        .card-body
                            .icon-stack.icon-stack-xl.bg-secondary-soft.text-secondary.mb-4.mt-n5.z-1.shadow
                                i(data-feather='life-buoy')
                            h5 Support
                            p.card-text Need help with a product that you just purchased? Need help with your account?
                        .card-footer
                            .text-secondary.font-weight-bold.d-inline-flex.align-items-center
                                | Contact Support
                                i.fas.fa-arrow-right.text-xs.ml-1
                .col-lg-4.mb-5
                    a.card.card-link.border-top.border-top-lg.border-teal.lift.text-center.o-visible.h-100(href='#!')
                        .card-body
                            .icon-stack.icon-stack-xl.bg-teal-soft.text-teal.mb-4.mt-n5.z-1.shadow
                                i(data-feather='tv')
                            h5 Media
                            p.card-text Looking to contact our media team for a press release or related story?
                        .card-footer
                            .text-teal.font-weight-bold.d-inline-flex.align-items-center
                                | Contact Media
                                i.fas.fa-arrow-right.text-xs.ml-1
            
            .row.justify-content-center.text-center
                .col-lg-5.mb-5.mb-lg-0
                    h5 Join us on Discord!
                    p.font-weight-light.mb-0 Join the discussion on Discord. Our community can help answer questions!
                .col-lg-5
                    h5 General Support
                    p.font-weight-light.mb-0
                        | For any other support questions, please send us an email at 
                        a(href='#!') support@example.com

            hr.my-10

            .row.justify-content-center
                .col-lg-8.text-center
                    h2 Can't find the answer you need?
                    p.lead.mb-5 Contact us and we'll get back to you as soon as possible with a solution to whatever issues you're having with SB UI Kit Pro.
            .row.align-items-center.mb-10
                .col-lg-4.text-center.mb-5.mb-lg-0
                    .section-preheading Message Us
                    a(href='#!') Start a chat!
                .col-lg-4.text-center.mb-5.mb-lg-0
                    .section-preheading Call Anytime
                    a(href='#!') (555) 565-1846
                .col-lg-4.text-center
                    .section-preheading Email Us
                    a(href='#!') support@startbootstrap.com
            form
                .form-row
                    .form-group.col-md-6
                        label.text-dark(for='inputName') Full name
                        input#inputName.form-control.py-4(type='text', placeholder='Full name')
                    .form-group.col-md-6
                        label.text-dark(for='inputEmail') Email
                        input#inputEmail.form-control.py-4(type='email', placeholder='name@example.com')
                .form-group
                    label.text-dark(for='inputMessage') Message
                    textarea#inputMessage.form-control.py-3(type='text', placeholder='Enter your message...', rows='4')
                .text-center
                    button.btn.btn-primary.btn-marketing.mt-4(type='submit') Submit Request

block footer

    include mixins/footer.pug
    +footer({
        footerBg: 'bg-dark',
        footerStyle: 'footer-dark'
    })